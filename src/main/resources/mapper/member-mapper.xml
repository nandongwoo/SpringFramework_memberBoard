<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">
    <insert id="save" parameterType="member" useGeneratedKeys="true" keyProperty="id">
        insert into testMember_table (id, memberEmail, memberPassword, memberName, memberMobile)
        values (#{id}, #{memberEmail}, #{memberPassword}, #{memberName}, #{memberMobile})
    </insert>
    <insert id="saveFile" parameterType="memberFile">
        insert into testMember_file_table (id, originalFileName, storedFileName, boardId)
        values (#{id}, #{originalFileName}, #{storedFileName}, #{boardId})
    </insert>



    <select id="login" parameterType="member" resultType="member">
        select * from testMember_table where memberEmail = #{memberEmail}
    </select>
    <select id="list" parameterType="member" resultType="member">
        select * from testMember_table
    </select>
<!--    <select id="findById" parameterType="member" resultType="member">-->
<!--        select * from testMember_table where memberEmail = #-->
<!--    </select>-->



    <delete id="delete" parameterType="Long">
        delete from testMember_table where id = #{id}
    </delete>


</mapper>